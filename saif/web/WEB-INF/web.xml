    </servlet>
    <servlet>
        <servlet-name>hotel_ap_servlet</servlet-name>
        <servlet-class>controller_p.hotel_ap_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update_hotel</servlet-name>
        <servlet-class>controller_p.update_hotel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search_servlet</servlet-name>
        <servlet-class>controller_p.search_servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup_servlet</servlet-name>
        <url-pattern>/signup_servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_servlet</servlet-name>
