    <servlet-mapping>
        <servlet-name>update_hotel</servlet-name>
        <url-pattern>/update_hotel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search_servlet</servlet-name>
        <url-pattern>/search_servlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
